{% block body %}
	<div class="card text-center width-100">
		<h3 class="card-title">
			<i class="fa fa-star"></i>
			Badges
		</h3>
	</div>
	{% for badge in badges %}
		<div class="card width-100">
			<div class="row">
				<div class="col-md-3 d-flex align-items-center">
					<img src="{{ asset('images/dealabs-default.jpg') }}" class="card-img image" alt="Badge not found">
				</div>
				<div class="col-md-9">
					<div class="card-body">
						<div class="badge-header">
							<h5 class="card-title title">
								<span>{{badge.title}}</span>
							</h5>
							<span>
								{{badge.currentValue}}
								/
								{{badge.goalValue}}
							</span>
						</div>
						<div class="progress">
							<div class="progress-bar" role="progressbar" style="width: {{(100 * badge.currentValue) / badge.goalValue}}%;" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
						<h6 class="card-text">{{badge.description}}</h6>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
